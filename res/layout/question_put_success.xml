<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/reseda"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_margin="5dp"
    	android:src="@drawable/seek_success_pic"/>
    
    <TextView 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_margin="5dp"
    	android:textSize="18sp"
    	android:text="@string/request_success"
    	style="@style/public_text_title"/>
    <TextView 
        android:id="@+id/tv_click_see"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:drawableRight="@drawable/u_right_arrow_gray"
    	android:textColor="@color/blue"
    	android:padding="10sp"
    	android:textSize="18sp"
    	android:layout_marginBottom="5dp"
    	android:text="@string/click_see"/>
</LinearLayout>