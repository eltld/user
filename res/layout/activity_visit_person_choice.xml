<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical" >

    <include layout="@layout/top_bar_doctor_green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/ll_visit_person_0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/list_item_default"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_visit_person_name_0"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:onClick="true"
                android:paddingTop="10dp"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_visit_person_name_0"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:src="@drawable/test_avatar"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/ll_visit_person_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/list_item_default"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_visit_person_name_1"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:onClick="true"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_visit_person_name_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:src="@drawable/test_avatar"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/ll_visit_person_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/list_item_default"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_visit_person_name_2"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:onClick="true"
            android:paddingTop="10dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_visit_person_name_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:src="@drawable/test_avatar"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/ll_visit_person_3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/list_item_default"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_visit_person_name_3"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:onClick="true"
            android:paddingTop="10dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_visit_person_name_3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:src="@drawable/test_avatar"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/ll_visit_person_4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/list_item_default"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_visit_person_name_4"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:onClick="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_visit_person_name_4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:src="@drawable/test_avatar"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="10sp" >

        <LinearLayout
            android:id="@+id/btn_add_person"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/bt_free_consult"
            android:clickable="true"
            android:gravity="center"
            android:minWidth="100dp"
            android:onClick="doClick"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add_person" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新增就诊人"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="仅支持添加5个就诊人信息"
            android:textColor="#9a9a9a"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>