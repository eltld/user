<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="充值成功"
        android:textColor="@color/topbg_green" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/topbg_green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal" >
        
        <ImageView 
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/secharge_success"
            android:layout_marginRight="7dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="恭喜你！"
            android:textColor="@color/orange"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/pay_tx1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你已通过支付宝充值成功"
            android:textColor="@color/umeng_fb_color_btn_normal" />

        <TextView
            android:id="@+id/pay_prisce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="1"
            android:textColor="@color/orange" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textColor="@color/umeng_fb_color_btn_normal" />
    </LinearLayout>

    <TextView
        android:id="@+id/serial_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="流水号"
        android:textColor="@color/umeng_fb_color_btn_normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.01px"
        android:layout_marginTop="10dp"
        android:background="#d9d9d9" />

    
    <Button 
        android:id="@+id/btnok"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="@string/ok"
        android:textColor="@color/topbg_green"
        android:background="@color/transparent"
        />
</LinearLayout>