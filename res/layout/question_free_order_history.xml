<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="10dp">
    
        
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >
            <ImageView 
                android:id="@+id/question_free_order_history_img_type"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/twzx_icon72x72"
                />
            <LinearLayout 
                android:id="@+id/l1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/question_free_order_history_img_type"
                android:layout_marginLeft="10dp"
                >
	            <TextView 
	                android:id="@+id/question_free_order_history_txt_type"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="15dp"
	                android:text="免费提问"
	                />
                <TextView 
                    android:id="@+id/question_free_order_history_txt_type_isanwser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:layout_marginTop="6dp"
                    android:text="待回答"
                    />
            </LinearLayout>
            <RelativeLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                >
	            <TextView 
	                android:id="@+id/question_free_order_history_txt_date"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="15dp"
	                android:text="2008-08-08"
	                android:layout_alignParentRight="true"
	                android:textColor="#909090"
	                />
                <TextView 
                    android:id="@+id/question_free_order_history_txt_ismoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_marginTop="6dp"
                    android:text="免费"
                    android:layout_below="@id/question_free_order_history_txt_date"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/red"
                    />
            </RelativeLayout>
            
        </RelativeLayout>
	
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dfdfdf"
        />
    <TextView 
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="有什么问题！！有什么问题！！有什么问题！！有什么问题！！有什么问题！！有什么问题！！有什么问题！！有什么问题！！有什么问题！！有什么问题！！"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="13dp"
        android:textColor="#606060"
        />
</LinearLayout>
