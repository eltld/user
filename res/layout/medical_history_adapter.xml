<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dip"
    android:background="#ffffff" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dip"
        android:src="@drawable/ac_next" />

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/medical_history_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.0"
            android:layout_marginRight="30dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text=""
            android:textColor="#000000"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/medical_history_keshi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="35dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text=""
            android:textColor="#04a0e3"
            android:textSize="13dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间: "
            android:singleLine="true"
            android:textColor="#a5a5a5"
            android:textSize="13dip" />

        <TextView
            android:id="@+id/medical_history_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:singleLine="true"
            android:text=""
            android:textColor="#a5a5a5"
            android:textSize="13dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/third"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/second"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="症状: "
            android:textColor="#a5a5a5"
            android:textSize="13dip" />

        <TextView
            android:id="@+id/medical_history_zhenzhuang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="30dp"
            android:text=""
            android:textColor="#a5a5a5"
            android:textSize="13dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/third"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5dip"
        android:paddingBottom="10dip"
        android:visibility="gone" >

        <ImageView
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:src="@drawable/medical_history_image" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"
        android:layout_below="@+id/ll_image" />

</RelativeLayout>