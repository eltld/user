<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/titleView"
        layout="@layout/top_bar_doctor_green" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/reseda"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_history_order"
            android:layout_width="fill_parent"
            android:layout_height="58dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/list_item_default"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="doClick"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/tv_disease_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:text="疾病类型"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
            
             <TextView
               android:id="@+id/diseasr_style"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="5dp"
               android:text="点击选择类型"
               android:textSize="12sp"
               android:textColor="@color/zi_gray"  />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/u_right_arrow_gray" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/ll_history_guahao"
            android:layout_width="fill_parent"
            android:layout_height="58dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/list_item_default"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="doClick"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:text="确诊时间"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
            
            <TextView
                android:id="@+id/person_time"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="5dp"
               android:text="点击选择时间"
               android:textSize="12sp"
               android:textColor="@color/zi_gray"  />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/u_right_arrow_gray" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />
    </LinearLayout>

</LinearLayout>