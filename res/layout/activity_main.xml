<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/home_main_layout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/reseda"
        android:orientation="vertical" >
    </FrameLayout>

    <LinearLayout
        android:id="@+id/home_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@drawable/main_border"
         >

        <RelativeLayout
            android:id="@+id/rl_tab_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:onClick="doClick" >

            <LinearLayout
                android:id="@+id/ll_tab_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/home_tab_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/a1_selector"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/tv_tab_bottom_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/tab_bottom_home"
                    android:textColor="@color/topbg_green"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/home_tab_home_count_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/ll_tab_home"
                android:background="@drawable/noti_new"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_tab_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:onClick="doClick" >
            <LinearLayout
                android:id="@+id/ll_tab_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="vertical" >
				
                <ImageButton
                    android:id="@+id/home_tab_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/a2_selector"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/tv_tab_bottom_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/tab_bottom_contact"
                    android:textColor="@color/tab_light_gray"
                    android:textSize="12sp" />
            </LinearLayout>
            <!--  更新红点
			<RelativeLayout 
			    android:id="@+id/home_tab_people_count_image"
	                android:layout_width="18dp"
	                android:layout_height="18dp"
	                android:layout_alignRight="@+id/ll_tab_people"
	                android:gravity="center"
			    >
	            <ImageView
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:background="@drawable/reddot"/>
	            <TextView 
	                android:id="@+id/home_tab_people_count_txt"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:text="99"
	                android:textColor="@color/white"
	                android:textSize="10sp"
	                android:gravity="center"
	                />
            </RelativeLayout>
             -->
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_tab_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:onClick="doClick"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/home_tab_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/a3_selector"
                android:clickable="false" />

            <TextView
                android:id="@+id/tv_tab_bottom_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/tab_bottom_service"
                android:textColor="@color/tab_light_gray"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tab_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:onClick="doClick"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/home_tab_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/a4_selector"
                android:clickable="false" />

            <TextView
                android:id="@+id/tv_tab_bottom_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/tab_bottom_me"
                android:textColor="@color/tab_light_gray"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>