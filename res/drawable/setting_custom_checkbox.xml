	<!--已经选中，且被按下-->
    <item android:state_pressed="true" android:state_checked="true" android:drawable="@drawable/btn_check_on" />
    <!--未被选中，且被按下-->
    <item android:state_pressed="true" android:state_checked="false"  android:drawable="@drawable/btn_check_on" />
    <!--已经选中，且被聚焦-->
    <item android:state_checked="true" android:state_focused="true"  android:drawable="@drawable/btn_check_on" />
    <!--未被选中，且被聚焦-->
    <item android:state_checked="false" android:state_focused="true" android:drawable="@drawable/btn_check_off" />
    <!--未被选中-->
    <item android:state_checked="false" android:drawable="@drawable/btn_check_off" />
    <!--已经选中-->
    <item android:state_checked="true" android:drawable="@drawable/btn_check_on" />
		
</selector>